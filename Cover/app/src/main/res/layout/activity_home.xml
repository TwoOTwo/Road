<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/drawer_layout"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <FrameLayout android:id="@+id/container" android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="0dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/editText"
            android:layout_gravity="left|top"
            android:background="#5fff4c"
            android:text="           爱心公益"
            android:textColor="#fffdf3"
            android:textSize="40sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:id="@+id/editText2"
            android:layout_gravity="left|bottom"
            android:background="#5fff4c" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="94dp"
                android:layout_height="50dp"
                android:layout_gravity="left|bottom">

                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/btn1"
                    android:layout_gravity="center"
                    android:background="@drawable/zhuye2"
                    android:clickable="true" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_gravity="right|bottom">

                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/btn4"
                    android:layout_gravity="center"
                    android:background="@drawable/wode1"
                    android:clickable="true"
                    android:onClick="onClick" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="142dp"
                android:layout_height="53dp"
                android:layout_gravity="center_horizontal|bottom"
                >

                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/btn2"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/faxian1"
                    android:clickable="true"
                    android:onClick="onClick" />

                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/btn3"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/sousuo1"
                    android:clickable="true"
                    android:onClick="onClick" />
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="404dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="0dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:layout_gravity="center_horizontal|top"
                android:background="@drawable/activity"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="187dp"
                android:layout_height="144dp"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/shopping">

            </LinearLayout>

            <FrameLayout
                android:layout_width="165dp"
                android:layout_height="130dp"
                android:layout_gravity="right|bottom"
                android:background="@drawable/sos"
                android:id="@+id/m"></FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="218dp"
                android:layout_height="130dp"
                android:layout_gravity="left|bottom"
                android:background="@drawable/volunteer"
                android:id="@+id/lin"></LinearLayout>

            <EditText
                android:layout_width="184dp"
                android:layout_height="144dp"
                android:id="@+id/editText3"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/money" />

        </FrameLayout>

    </FrameLayout>

    <!-- android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         If you're not building against API 17 or higher, use
         android:layout_gravity="left" instead. -->
    <!-- The drawer is given a fixed width in dp and extends the full height of
         the container. -->



</android.support.v4.widget.DrawerLayout>
