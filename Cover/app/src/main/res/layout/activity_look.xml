<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:background="@drawable/qiqiu">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="                    发现"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal|top"
            android:background="#89ff31"
            android:textSize="30dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#89ff31" />

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:layout_gravity="left|top">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageButton5"
                android:layout_gravity="center"
                android:background="@drawable/caidan" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="94dp"
                android:layout_height="50dp"
                android:layout_gravity="left|bottom">

                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/btn1"
                    android:layout_gravity="center"
                    android:background="@drawable/zhuye1" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_gravity="right|bottom">

                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/btn4"
                    android:layout_gravity="center"
                    android:background="@drawable/wode1" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="142dp"
                android:layout_height="53dp"
                android:layout_gravity="center_horizontal|bottom">

                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/btn2"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/faxian2" />

                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/btn3"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/sousuo1" />
            </FrameLayout>
        </FrameLayout>

    </FrameLayout>
</RelativeLayout>
