<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginIn"
    android:background="#ffffc0">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="330dp"
        android:layout_height="150dp"
        android:background="#ffffff"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="15dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/zhanghao2"
            android:hint="    用户名/邮箱/手机/爱心号" />


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/mima5"
            android:hint="  6-20位字母、数字和字符"
            android:maxEms="20"
            android:minEms="6" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#f59129"
        android:id="@+id/linearLayout2"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="                   账号登录"
            android:id="@+id/textView"
            android:textSize="26dp"
            android:layout_marginTop="6dp"
            android:textColor="#ffffff" />
    </LinearLayout>

    <Button
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:text="登录"
        android:id="@+id/button"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#f59129"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="立即注册"
        android:id="@+id/textView2"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:textSize="20dp"
        android:textColor="#f59129"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号快捷登录"
        android:id="@+id/textView3"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:textColor="#f59129"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageView"
        android:src="@drawable/qq2"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginTop="43dp" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageView2"
        android:src="@drawable/weixin2"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

</RelativeLayout>
