<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainbackground"
    android:clickable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="公益汇"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:background="#f59129" />
        <ImageButton
            android:id="@+id/ibu11"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/wode"/>
    </RelativeLayout>

    <TextView
        android:layout_height="150dp"
        android:layout_width="wrap_content" />//空间隔


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ibu1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/zhiyuanzhe"/>
        <ImageButton
            android:id="@+id/ibu2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/aixinjuan"/>
        <ImageButton
            android:id="@+id/ibu3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/aixingou"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ibu4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/aihuodong" />
        <ImageButton
            android:id="@+id/ibu5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/aiqiuzhu" />
        <ImageButton
            android:id="@+id/ibu6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/daikaifa" />
    </LinearLayout>
  </LinearLayout>