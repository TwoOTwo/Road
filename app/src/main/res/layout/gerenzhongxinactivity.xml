<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
    android:background="#d3c9be">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="                个人中心"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="false"
        android:textSize="30dp"
        android:layout_marginTop="8dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#f59129"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_gravity="left|bottom"
            android:background="#ffffff"
            android:layout_marginTop="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="爱心积分"
                android:id="@+id/textView"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:drawableLeft="@drawable/jifen4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="   "
                android:id="@+id/jifen"
                android:layout_gravity="center_horizontal|bottom" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="right|bottom"
            android:layout_marginLeft="180dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="服务时长"
                android:id="@+id/textView6"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:drawableLeft="@drawable/fuwu1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=" "
                android:id="@+id/time"
                android:layout_gravity="center_horizontal|bottom" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_gravity="left|top"
            android:id="@+id/relativelayout2"
            android:background="#f59129">

            <Button
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="登录"
                android:id="@+id/button"
                android:background="#ffffff"
                android:layout_alignTop="@+id/button2"
                android:layout_toLeftOf="@+id/button2"
                android:layout_toStartOf="@+id/button2"
                android:layout_marginRight="10dp" />

            <Button
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="注册"
                android:id="@+id/button2"
                android:background="#ffffff"
                android:layout_marginRight="40dp"
                android:layout_marginEnd="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/framelayout2"
        android:layout_marginTop="215dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" 我的申请"
            android:id="@+id/textView2"
            android:layout_gravity="left|top"
            android:background="#ffffff"
            android:paddingTop="5dp"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="#ffffff">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:id="@+id/imageView"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#ffffff"
                android:src="@drawable/baoming1" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:id="@+id/imageView2"
                android:layout_alignTop="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:background="#ffffff"
                android:src="@drawable/luyong1" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:id="@+id/imageView3"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2"
                android:background="#ffffff"
                android:src="@drawable/daogang1" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:id="@+id/imageView4"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_toEndOf="@+id/imageView3"
                android:background="#ffffff"
                android:src="@drawable/jieshu1" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="我的收藏"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#ffffff"
            android:textSize="20dp"
            android:paddingTop="7dp"
            android:drawableLeft="@drawable/shoucang7"/>

    </FrameLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="意见反馈"
        android:id="@+id/textView5"
        android:background="#ffffff"
        android:layout_below="@+id/framelayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="6dp"
        android:textSize="20dp"
        android:layout_marginTop="0dp"
        android:drawableLeft="@drawable/fankui2"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="更多"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:background="#ffffff"
        android:paddingTop="6dp"
        android:drawableLeft="@drawable/gengduo2"/>

</RelativeLayout>
